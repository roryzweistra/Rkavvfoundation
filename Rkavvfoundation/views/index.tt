<section class="section">
    <div class="container">
        <div class="home-search-box">
            <form action="/search/" method="POST">
                <div class="field is-horizontal">
                    <div class="field-body">
                        <div class="field">
                            <div class="field-label is-normal dark">
                                <label class="label">&nbsp;</label>
                            </div>
                            <div class="buttons has-addons">
                                <button class="button is-selected">
                                    <span class="icon">
                                        <i class="fas fa-plane"></i>
                                    </span>
                                </button>
                                <button class="button">
                                    <span class="icon">
                                        <i class="fas fa-car-side"></i>
                                    </span>
                                </button>
                                <button class="button">
                                    <span class="icon">
                                        <i class="fas fa-bus"></i>
                                    </span>
                                </button>
                            </div>
                        </div>
                        <div class="field">
                            <div class="field-label is-normal">
                                <label class="label dark">Bestemming</label>
                            </div>
                            <div class="control">
                                <input name="destination" class="input db-search-holiday-destination" type="text" placeholder="Bestemming">
                            </div>
                        </div>
                        <div class="field">
                            <div class="field-label is-normal">
                                <label class="label dark">Aantal personen</label>
                            </div>
                            <div class="control is-expanded ">
                                <input class="input is-success" type="number" min="1" max="9" placeholder="Aantal personen" value="[% IF session.search_data.pax_amount %][% session.search_data.pax_amount %][% END %]">
                            </div>
                        </div>
                        <div class="field">
                            <div class="field-label is-normal">
                                <label class="label dark">Vertrekdatum</label>
                            </div>
                            <div class="control is-expanded ">
                                <input class="input is-success" type="date" placeholder="Vertrekdatum" value="[% session.search_data.start_date.default %]" />
                            </div>
                        </div>
                        <div class="field">
                            <div class="field-label is-normal">
                                <label class="label dark">Reisduur</label>
                            </div>
                            <div class="control is-expanded">
                                <div class="select">
                                    <select class="select">
                                        <option [% IF session.search_data.day_range == '2-5' %]selected="selected"[% END %] value="2-5">2 t/m 5 dagen</option>
                                        <option [% IF session.search_data.day_range == '6-10' %]selected="selected"[% END %] value="6-10">6 t/m 10 dagen</option>
                                        <option [% IF session.search_data.day_range == '11-16' %]selected="selected"[% END %] value="11-16">11 t/m 16 dagen</option>
                                        <option [% IF session.search_data.day_range == '17-24' %]selected="selected"[% END %] value="17-24">17 t/m 24 dagen</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <div class="field-label is-normal">
                                <label class="label">&nbsp;</label>
                            </div>
                            <div class="control">
                                <button class="button db-button db-search-holiday-button" type="submit">Zoeken</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>



